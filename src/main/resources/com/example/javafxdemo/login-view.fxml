<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" minHeight="1000" minWidth="600" prefHeight="1000" prefWidth="600" spacing="20" styleClass="main-container"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javafxdemo.controller.LoginController">
    <children>
        <Label fx:id="resultLabel" text="" styleClass="lbl"/>
        <HBox alignment="CENTER" spacing="10">
            <Label text="UserName" />
            <TextField fx:id="userEmail" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Password" />
            <PasswordField fx:id="userPassword" />
        </HBox>

        <HBox alignment="CENTER" styleClass="btn-container">
            <Button contentDisplay="CENTER" styleClass="btn-primary" mnemonicParsing="false" onAction="#login" text="Log In" style="-fx-padding: 10 20 0 20;" />
            <Button onAction="#goToRegisterPage" text="Register" styleClass="btn-primary" style="-fx-padding: 0 20 10 20;" />
        </HBox>

    </children>
</VBox>